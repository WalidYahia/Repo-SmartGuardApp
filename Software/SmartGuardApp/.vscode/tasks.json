{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-android-debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SmartGuardApp/SmartGuardApp.csproj",
                "-f", "net9.0-android",
                "-c", "Debug",
                "/t:Run"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "deploy-android-debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SmartGuardApp/SmartGuardApp.csproj",
                "-f", "net9.0-android",
                "-c", "Debug",
                "/t:Run"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "build-windows-debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SmartGuardApp/SmartGuardApp.csproj",
                "-f", "net9.0-windows10.0.19041.0",
                "-c", "Debug"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}

