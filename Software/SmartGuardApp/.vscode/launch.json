{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET MAUI Windows Debug (Breakpoints Work!)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-windows-debug",
            "program": "${workspaceFolder}/SmartGuardApp/bin/Debug/net9.0-windows10.0.19041.0/win10-x64/SmartGuardApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SmartGuardApp",
            "stopAtEntry": false,
            "console": "internalConsole",
            "justMyCode": true,
            "requireExactSource": false,
            "enableStepFiltering": false,
            "symbolOptions": {
                "searchPaths": [
                    "${workspaceFolder}/SmartGuardApp/bin/Debug/net9.0-windows10.0.19041.0/win10-x64"
                ]
            }
        },
        {
            "name": ".NET MAUI Android (Deploy Only)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-android-debug",
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}

